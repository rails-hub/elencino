    Precio por m2:
    %span.precio-por-m2 #{number_to_currency(precio_por(@lot))}
    (10% adicional)
    %br/
    Importe Total:
    %span.importe-total-3 #{number_to_currency(importe(@lot)) }
    %br/
    Finiquito:
    %span.finiquito #{number_to_currency(finiquito(@lot)) }
