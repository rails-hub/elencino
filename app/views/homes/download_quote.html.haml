= stylesheet_link_tag "/assets/quote.css", :media => "all"
.container
  %h3.ico-m-1{:style => "margin-top: 0px; padding-top: 8px; padding-bottom: 11px;"} Cotización - Manzana #{@lot.block.block_number} Lote #{@lot.lot_number}
  %table.top-table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tr
      %td
        %p
          Superficie:
          %span.superficie #{@lot.area}m2
          %br/
          Precio de Lista:
          %span.precio-de-lista #{number_to_currency(@lot.price)}
      %td{:align => "right"}
        %p
          Importe Total:
          %span.importe-total #{number_to_currency(@lot.total)}
          %br/
          Apartado de
          %span.apratado-de #{number_to_currency(ENV["APARTADO"].to_f)}
  %h3.ico-m-2{:style => "margin-top: 9px;"} 36 Meses Sin Intereses
  %p
    30% Enganche:
    %span.enganche-30 #{number_to_currency(enganche(@lot))}
    %br/
    Primer Pago:
    %span.primer-pago #{number_to_currency(primer(@lot))}
    %br/
    36 Mensualidades de:
    %span.mensualidades #{number_to_currency(mensualidades(@lot))}
  %h3.ico-m-3{:style => "margin-top: 33px;"} 50% Enganche
  %p
    Precio por m2:
    %span.precio-por-m2 #{number_to_currency(precio_por_m2(@lot))}
    (10% desc.)
    %br/
    Importe Total:
    %span.importe-total-2 #{number_to_currency(importe_total(@lot))}
    %br/
    50% Enganche:
    %span.enganche-50 #{number_to_currency(enganche_fifty(@lot)) }
    %br/
    Primer Pago:
    %span.primer-pago-2 #{number_to_currency(primer_pago(@lot))}
    %br/
    Segundo Pago:
    %span.segundo-pago #{number_to_currency(enganche_fifty(@lot)) }
