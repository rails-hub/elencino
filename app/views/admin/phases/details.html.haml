= render "shared/admin_menu"
#page-wrapper
  .row
    .col-lg-12
      %h2
        = "#{@phase.name} Details"
      .panel.panel-default
        .panel-heading
          Import Data
          %i.fa.fa-bar-chart-o.fa-fw
          %span
            = form_tag import_admin_phase_path(@phase), multipart: true do
              = file_field_tag :file
              = submit_tag "Import", :class => "btn btn-primary btn-sm"

        / /.panel-heading
        .panel-body
          .row
            .col-lg-12
              .table-responsive
                %table.table.table-bordered.table-hover.table-striped
                  %thead
                    %tr
                      %th #
                      %th Block
                      %th Street
                      %th Lot
                      %th Area
                      %th Price
                      %th Status
                      %th Total
                  %tbody
                    -unless @phase.blank?
                      - j = 1
                      - @phase.blocks.each_with_index do |block, index|
                        - block.lots.each_with_index do |lot, i|
                          %tr
                            %td
                              = j
                            %td
                              = block.block_number
                            %td
                              = lot.street
                            %td
                              = lot.lot_number
                            %td
                              = lot.area
                            %td
                              = number_to_currency(lot.price)
                            %td
                              = lot.status? ? "Sold" : "Not Sold"
                            %td
                              = number_to_currency(lot.total)
                            -#%td
                              -#= link_to("edit", edit_admin_phase_path(phase))
                              -#= link_to("Import Data", import_admin_phase_path(phase))
                              -#= form_tag import_admin_phase_path(phase), multipart: true do
                              -#  = file_field_tag :file
                              -#  = submit_tag "Import"
                              -#= link_to 'Delete',url_for(action: :destroy,id: phase.id),method: :delete, data: {confirm: "Are you sure?"}
                          - j =  j + 1