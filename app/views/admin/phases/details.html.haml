= render "shared/admin_menu"
#page-wrapper
  .row
    .col-lg-12
      %h2
        = "#{@phase.name} Details"
      .panel.panel-default
        .panel-heading
          Import Data
          %i.fa.fa-bar-chart-o.fa-fw
          %span
            = form_tag import_admin_phase_path(@phase), multipart: true do
              = file_field_tag :file
              = submit_tag "Import", :class => "btn btn-primary btn-sm"

        / /.panel-heading
        .panel-body
          .row
            = paginate @blocks
            .col-lg-12
              .table-responsive
                %table.table.table-bordered.table-hover.table-striped
                  %thead
                    %tr
                      %th #
                      %th Block
                      %th Street
                      %th Lot
                      %th Area
                      %th Price
                      %th Status
                      %th Total
                  %tbody
                    -unless @blocks.blank?
                      - j = 1
                      - @blocks.each_with_index do |block, index|
                        - block.lots.each_with_index do |lot, i|
                          %tr
                            %td
                              = lot.id
                            %td
                              = block.block_number
                            %td
                              = lot.street
                            %td
                              = lot.lot_number
                            %td
                              = lot.area
                            %td
                              = number_to_currency(lot.price)
                            %td
                              = lot.status? ? "Sold" : "Not Sold"
                            %td
                              = number_to_currency(lot.total)
                          - j =  j + 1

:javascript
  $(document).ready(function()
      {
          $(".table").tablesorter();
      }
  )
