= render "shared/admin_menu"
#page-wrapper
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading
          %i.fa.fa-bar-chart-o.fa-fw
          %span
            = link_to 'Add Manager', new_admin_manager_path, :class => "btn btn-primary btn-sm"
          %i.fa.fa-bar-chart-o.fa-fw
          %span
            = link_to 'Add Salesman', new_admin_salesman_path, :class => "btn btn-primary btn-sm"
        / /.panel-heading
        .panel-body
          .row
            .col-lg-12
              .table-responsive
                %table.table.table-bordered.table-hover.table-striped
                  %thead
                    %tr
                      %th #
                      %th Name
                      %th Username
                      %th Actions
                  %tbody
                    - @users.each_with_index do |user, index|
                      %tr
                        %td
                          = index + 1
                        %td
                          = user.name
                        %td
                          = user.username
                        %td
                          = link_fa_to("edit", "", edit_admin_user_path(user))
                          = link_to 'Delete',url_for(action: :destroy,id: user.id),method: :delete, data: {confirm: "Are you sure?"}